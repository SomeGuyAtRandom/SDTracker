@using SDTracker.Common;

@if (Request.IsAuthenticated)
{
    <a href="~/User/Logout" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Reports<span class="caret"></span></a>
    <ul class="dropdown-menu" role="menu">
        <li>@Html.ActionLink("Report - General View 1", "Index", "Report")</li>
        <li>@Html.ActionLink("Report - General View 2", "Index", "Report")</li>
        <li>@Html.ActionLink("Report - General View 3", "Index", "Report")</li>
        <li class="divider">Test User Privs</li>

        @if (SDTRoleProvider.UserIsInRole(ViewContext, "Admin"))
        {
            <li class="divider">Admin Reports</li>
            <li>@Html.ActionLink("Report - Admin View 1", "Index", "Report")</li>
            <li>@Html.ActionLink("Report - Admin View 1", "Index", "Report")</li>
        }
        @if (SDTRoleProvider.UserIsInRole(ViewContext, "Guest,Admin"))
        {
            <li class="divider">Engineer Reports</li>
            <li>@Html.ActionLink("Report - Engineer View 1", "Index", "Report")</li>
            <li>@Html.ActionLink("Report - Engineer View 1", "Index", "Report")</li>
            <li>@Html.ActionLink("Report - Engineer View 1", "Index", "Report")</li>

        }
        @if (SDTRoleProvider.UserIsInRole(ViewContext, "Guest"))
        {
            <li>@Html.ActionLink("Guest", "EditProfile", "User")</li>
        }

    </ul>


}

